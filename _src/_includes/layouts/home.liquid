---
layout: layouts/base.liquid
title: Default Home Title

---
    <title>{{ title}}</title>
    <link rel="stylesheet" href="/src/scss/home.scss">
<div class="container-fluid pb-3 h-100 min-vh-100" style="background-image: linear-gradient(to bottom, rgba(255,241,235,1) , rgba(172,224,249,0.85));">
    <div class="row flex-grow-sm-1 flex-grow-0">
        <!-- side bar for mobile -->
        <div class="d-block d-sm-none">
            <a class="btn fixed-bottom" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button">
                About me
              </a>
              
              <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample">
                <div class="offcanvas-header">
                  <h5 class="offcanvas-title" id="offcanvasExampleLabel"><strong>Jakub Chrenko</strong></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="p-1 h-100 sticky-top">
                        <ul class="list-unstyled">
                            <li>
                                <h6>{{jobTitle}}</h6>
                            </li>
                            <li class="mt-5">
                                <i class="bi bi-envelope d-inline"></i><p class="d-inline">     jakubsid@gmail.com</p>
                            </li>       
                            <li>
                                <i class="bi bi-instagram d-inline"></i><p class="d-inline">    Instagram handle</p>
                            </li>
                            <li class="mt-3">
                                <p>{{personalDescription}}</p>
                            </li>
                        </ul>
                    </div>
                </div>
              </div>
        </div>

        <!-- Side bar for wide screen -->
        <aside class="col-sm-3 sticky-top pb-3 d-none d-sm-block">
            <div class="p-1 h-100 sticky-top">
                <ul class="list-unstyled">
                    <li>
                        <h2><strong>Jakub Chrenko</strong></h2>
                    </li>
                    <li>
                        <h6>{{jobTitle}}</h6>
                    </li>
                    <li>
                        <img src="/src/img/portfolio.png" class="mx-auto d-block w-75">
                    </li>
                    <li class="mt-5">
                        <i class="bi bi-envelope d-inline"></i><p class="d-inline">jakubsid@gmail.com</p>
                    </li>       
                    <li>
                        <i class="bi bi-instagram d-inline"></i><p class="d-inline">    Instagram handle</p>
                    </li>
                    <li class="mt-3">
                        <p>{{personalDescription}}</p>
                    </li>
                </ul>
            </div>
        </aside>
        <!-- main content -->

        <main class="col overflow-auto h-100 w-100 p-0">
            <div class="container bg-light w-100">
                <h1 class="text-center"><strong>{{title}}</strong></h1>
                <p>{{content}}</p>
            </div>
        </main>
    </div>
</div>


    